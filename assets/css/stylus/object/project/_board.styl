.p-board {
    canvas {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 3;
        width: 100%;
        height: 100%;
        //visibility: hidden;
    }
    video {
        position: absolute;
        top: 0;
        left: 0;
        //width: 100%;
        //height: 100%;
        z-index: 2;
        &.is-disable { visibility: hidden; }
    }
    img {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 3
    }
    &__taketurn {
        position: absolute;
        z-index: 4;
        bottom: 0;
        left: 0;
        &.is-none { display: none; }
    }
    &__myturn {
        position: absolute;
        z-index: 4;
        bottom: 0;
        right: 0;
        &.is-none { display: none; }
    }
    &__clear {
        position: absolute;
        z-index: 4;
        top: 0;
        right: 0;
        &.is-none { display: none; }
    }
}