@import './foundation/_reset.styl'
    
#container { height: 100%;}
.l-wrapper {
    display: flex;
    flex-direction: column;
    height: 100vh;
    max-height: 100%;
}
header.wrapper {
    height: 40px;
    background: linear-gradient(45deg, #ff3a3a, #ff8c10);
    background: -moz-linear-gradient(45deg, #ff3a3a, #ff8c10);
    background: -webkit-linear-gradient(45deg, #ff3a3a, #ff8c10);
}
header h1 {
    background-image: url(/img/HandWritingBoard.png);
    background-size: contain;
    width: 160px;
    height: 20px;
    margin: 12px;
    text-indent: -9999px;
    display: block;
}
@media only screen and (-webkit-min-device-pixel-ratio: 2) {
    header h1 {
        background-image: url(/img/HandWritingBoard.png);
        background-size: contain;
        width: 160px;
        height: 20px;
        margin: 12px;
        text-indent: -9999px;
        display: block;
    }
}
section.wrapper {
    background-color: rgba(246, 246, 246, 0.5);
    height: 178px;
    padding-top: 32px;
    margin-bottom: 52px;
}
section.wrapper h1.circle {
    width: 124px;
    height: 124px;
    border-radius: 50%;
    background: #fff;
    margin: 0 auto;
}
section.wrapper h2 {
    text-align: center;
    padding-top: 12px;
    padding-bottom: 24px;
}
.form dt {
    color: #9f9f9f;
    margin-bottom: 12px;
    font-size: 0.9em;
}
.form dd input {
    border-bottom: 1px solid #d8d8d8;
    border-right: none;
    border-left: none;
    border-top: none;
    border-radius: 0px;
    box-sizing: border-box;
    outline: none;
    width: 100%;
    height: 40px;
}
.main {
    padding: 16px;
    margin-bottom: 40px;
}
.enter {
    width: 220px;
    margin: 52px auto;
}
.main_button {
    display: inline-block;
    width: 100%;
    height: 33px;
    background-color: #ff3a3a;
    color: #fff;
    text-align: center;
    padding-top: 12px;
    border: none;
    border-radius: 22px;
    -webkit-border-radius: 22px;
    -moz-border-radius: 22px;
    margin-bottom: 8px;
}
.main_button:hover {
    transition: all 0.1s;
    background-color: rgba(255, 58, 58, 0.7);
}
.sub_button {
    display: inline-block;
    width: 100%;
    height: 33px;
    background-color: #fff;
    color: #282828;
    text-align: center;
    padding-top: 12px;
    border: 1px solid #979797;
    border-radius: 22px;
    -webkit-border-radius: 22px;
    -moz-border-radius: 22px;
    margin-bottom: 8px;
}
.sub_button:hover {
    transition: all 0.1s;
    background-color: rgba(250, 250, 250, 0.7);
    color: #282828;
}
.mini_button {
    width: 220px;
}
.minimum_button {
    width: 60px;
    height: 24px;
    border-radius: 14px;
    padding: 0;
}
footer {
    text-align: center;
    font-size: 0.8em;
    margin-top: auto;
    padding-bottom: 8px;
}

/*board*/
.action {
    padding: 8px;
    text-align: center;
    margin-top: auto;
    padding-bottom: 8px;
    z-index: 10;
    position: fixed;
    bottom: 0;
    width: 100%;
    box-sizing: border-box;
}
.board-main {
    flex: 1;
    display: flex;
    flex-direction: column;
}
.board-main-room {
    background-color: rgba(246, 246, 246, 0.5);
    padding: 12px 8px 0;
}
.board-main-room h1 {
    font-size: 0.8em;
    color: #9f9f9f;
    margin-bottom: 2px;
}
.board-main-container {
    display: flex;
}
.board-main-container h2 {
    font-weight: bold;
    margin-right: 12px;
}
.canvas {
    //padding: 8px;
    position: relative;
    flex: 1;
    overflow: hidden;
    canvas {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 3;
    }
    video {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 2;
        &.is-disable { visibility: hidden; }
    }
    img {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 3
    }
}
.canvas-member {
    display: flex;
    flex-direction: column;
    margin-top: 32px;
    position: absolute;
    right: 12px;
    z-index: 10;
    top: 100px;
}
.canvas-member li {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: #eaeaea;
    margin-bottom: 12px;
}
.canvas-member__activate {
    border: 2px solid #ff3a3a;
}

/*modal*/
.modal {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    /*visibility: hidden;
  transition: .3s linear;*/
}
.modal h1 {
    font-weight: bold;
    font-size: 1.2em;
    text-align: center;
    margin: 24px auto;
}
.modal_body {
    text-align: center;
    width: 80%;
    top: 50%;
    left: 50%;
    transform: translateY(-50%) translateX(-50%);
    -webkit-transform: translateY(-50%) translateX(-50%);
    position: absolute;
    padding: 12px;
    z-index: 5;
    background: rgb(255, 255, 255);
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    min-height: 40vh;
}
.modal__footer {
    width: 100%;
    margin-top: auto;
    bottom: 4px;
}